.con-content {
  display: flex;
  width: 686rpx;
  height: 452rpx;
  margin: 0 auto;
  border-radius: 12rpx;
  flex-direction: column;
  background: #fff;
  box-shadow: 0 2px 1px 1px rgba(0, 0, 0, 0.15);
  margin-top: 30rpx;
}

.con-image {
  width: 686rpx;
  height: 352rpx;
}

.con-title {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #333;
  letter-spacing: 0.17px;
  /* text-align: center; *//* font-weight: bold; */
  float: left;
  margin-top: 8rpx;
  margin-left: 20rpx;
}

.con-name {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #999;
  letter-spacing: 0.24rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-top: 6rpx;
  /* float: left; */
}

.con-date {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #999;
  letter-spacing: 0.12rpx;
  text-align: center;
  margin-top: 6rpx;
}

.con-view {
  width: 30rpx;
  height: 20rpx;
  display: block;
  float: left;
  margin-top: 23rpx;
}

.con-view-n {
  float: right;
  margin-right: 20rpx;
}

.con-three {
  margin-top: -6px;
}

.con-num {
  margin-left: 10rpx;
  /* margin-right: 10rpx; */
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #999;
  letter-spacing: 0.12rpx;
  /* text-align: center; */
}

.shi {
  height: 10px;
  width: 100%;
  /* background-color:antiquewhite; *//* float: top; */
}

.con-fire {
  width: 28rpx;
  height: 28rpx;
  display: none;
  margin-left: 20rpx;
}

.con-content:nth-child(1) .con-fire, .con-content:nth-child(2) .con-fire {
  display: inline-block;
}
